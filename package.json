{
  "name": "idbsql",
  "version": "0.0.1",
  "description": "A library for interacting with IndexedDB using SQLite and Drizzle ORM in a worker thread",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "generate-worker": "tsx ./scripts/generate-worker.ts",
    "dev:worker": "nodemon --watch worker.js --exec \"npm run generate-worker\"",
    "dev:tsc": "nodemon --watch src --ext ts --exec \"rimraf dist && tsc\"",
    "dev:lib": "npm run dev:worker && npm run dev:tsc",
    "dev:examples": "vite examples",
    "dev": "concurrently \"npm run dev:lib\" \"npm run dev:examples\"",
    "build": "rimraf dist && npm run generate-worker && tsc",
    "prepare": "npm run build",
    "preinstall": "npm run generate-worker",
    "test": "jest"
  },
  "keywords": [
    "indexeddb",
    "sqlite",
    "drizzle",
    "orm",
    "worker",
    "browser"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.2",
    "concurrently": "^9.1.2",
    "drizzle-orm": "^0.29.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.2.2",
    "vite": "^5.4.14"
  }
}
