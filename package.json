{
  "name": "idbsql",
  "version": "0.0.1",
  "description": "A library for interacting with IndexedDB using SQLite and Drizzle ORM in a worker thread",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "prebuild": "mkdir -p dist",
    "generate-worker": "ts-node ./scripts/generate-worker.ts",
    "build": "npm run generate-worker && tsc",
    "dev:worker": "nodemon --watch worker-raw.js --exec \"npm run generate-worker\"",
    "dev:tsc": "tsc --watch --outDir dev-dist",
    "dev": "concurrently \"npm run dev:worker\" \"npm run dev:tsc\"",
    "test": "jest",
    "prepare": "npm run build",
    "example:dev": "vite examples"
  },
  "keywords": [
    "indexeddb",
    "sqlite",
    "drizzle",
    "orm",
    "worker",
    "browser"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.2",
    "concurrently": "^9.1.2",
    "drizzle-orm": "^0.29.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^5.4.14"
  }
}
