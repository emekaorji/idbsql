{
  "name": "idbsql",
  "version": "0.0.1",
  "description": "A library for interacting with IndexedDB using SQLite and Drizzle ORM in a worker thread",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "prebuild": "mkdir -p dist",
    "build": "tsc && npm run copy-worker",
    "copy-worker": "cp public/idbsql-worker.js dist/",
    "dev": "tsc --watch",
    "test": "jest",
    "prepare": "npm run build"
  },
  "keywords": [
    "indexeddb",
    "sqlite",
    "drizzle",
    "orm",
    "worker",
    "browser"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "drizzle-orm": "^0.29.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  }
}
